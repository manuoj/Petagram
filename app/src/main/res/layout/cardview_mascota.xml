<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardviewMascota"
    android:layout_width="@dimen/cardview_width"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_cardview"
    card_view:cardCornerRadius="@dime/corner_cardview"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_cardview"
        >

        <ImageView
            android:id="@+id/ivFoto"
            android:layout_width="@dimen/imageview_foto"
            android:layout_height="wrap_content"
            android:src="@drawable/mascota6"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="@dimen/tamaño_likeIcon"
                android:layout_height="@dimen/tamaño_likeIcon"
                android:background="@drawable/hueso2"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamaño_letras"
                android:textStyle="bold"
                android:text="Catty"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamaño_letras"
                android:textStyle="italic"
                android:text="@string/Likes_inicio"
                android:layout_marginStart="@dimen/margin_left_likes"
                android:layout_marginLeft="@dimen/margin_left_likes"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/ivCroqueta"
                android:layout_width="@dimen/tamaño_icon"
                android:layout_height="@dimen/tamaño_icon"
                android:adjustViewBounds="true"
                android:src="@drawable/hueso1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_left_cv"
                android:layout_marginLeft="@dimen/margin_left_cv"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>